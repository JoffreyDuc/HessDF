<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgAssociation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/associations_image_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvNomAssociation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/associations_nom_height"
        android:text="@string/app_name"
        android:textSize="@dimen/associations_nom_textSize"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/imgAssociation"
        android:textAlignment="center"
        android:layout_alignRight="@+id/imgAssociation"
        android:layout_alignEnd="@+id/imgAssociation"
        android:background="@android:color/white"/>

</RelativeLayout>